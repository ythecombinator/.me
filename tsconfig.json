{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "data/*": ["src/data/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "model/*": ["src/model/*"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
      "templates/*": ["src/templates/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
